{
  "name": "mathsoc-website",
  "version": "1.0.0",
  "description": "The source code for the MathSoc website migration",
  "main": "server.ts",
  "scripts": {
    "start": "npm run sass-build && npm run ts-build && ts-node server.ts",
    "dev": "npm run ts-build && npm run sass-build && npm-run-all --parallel sass-watch ts-watch host-dev-server",
    "host-dev-server": "nodemon server.ts",
    "sass-build": "sass public/assets/sass:public/assets/css --no-source-map",
    "sass-watch": "sass --watch public/assets/sass:public/assets/css --no-source-map",
    "lint": "npx eslint server/ public/assets/ts *.ts",
    "ts-build": "webpack --config webpack.config.js",
    "ts-watch": "webpack --config webpack.config.js --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MathSoc/mathsoc-website.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MathSoc/mathsoc-website/issues"
  },
  "homepage": "https://github.com/MathSoc/mathsoc-website#readme",
  "dependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "babel-loader": "^9.1.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "node-fetch": "^2.6.9",
    "nodemailer": "^6.8.0",
    "nodemon": "^2.0.20",
    "pug": "^3.0.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "validator": "^13.7.0",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.1.0",
    "winston": "^3.8.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@swc/core": "^1.3.32",
    "@types/express": "^4.17.15",
    "@types/express-fileupload": "^1.4.1",
    "@types/node": "^18.11.18",
    "@types/nodemailer": "^6.4.7",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.3",
    "sass": "^1.55.0",
    "typescript": "^4.9.4"
  },
  "nodemonConfig": {
    "ignore": [
      "server/data/**"
    ]
  }
}
