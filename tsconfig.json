{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "CommonJS",
    "outDir": "public/assets/js",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false
  },
  "include": ["public/assets/ts/**/*.ts", "public/assets/ts/admin/editor-loader.ts", "public/assets/ts/admin/generic-editor.tsx"],
  "ts-node": {
    "swc": true
  }
}
