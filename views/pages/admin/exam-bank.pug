extends /views/templates/admin-base.pug

append styles
  link(href="/assets/css/pages/resources/exam-bank.css" rel="stylesheet")
  link(href="/assets/css/admin/exam-bank.css" rel="stylesheet")

append scripts
  script(src="/assets/js/exam-bank.js" defer)
  script(src="/assets/js/admin/exam-bank/exam-bank-editor.tsx.js" defer)

block body
  div(id="body")
    h1 Exam Bank
    p Use this page to manage the exam bank.

    section
      h2 Add exams
      div(id="add-exams-container")

    hr  
    section
      h2 Manage current exams 
      p Refresh your browser window to see any newly-uploaded exams reflected in the list.
      div(id="exam-bank-searchbar")
        label(id="exams-search-label") Filter for your exam then find it in the list below
        input(id="exam-list-filter" placeholder="CS 136" aria-labelledby="exams-search-label")
      +exam-bank-table(true)
