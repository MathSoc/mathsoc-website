extends /views/templates/frontend-base.pug

append styles
    link(href="/assets/css/pages/resources/important-links.css" rel="stylesheet")

block body 
    div(class="content")
        section 
            h1 #{data.title}
            ol(class="stepper")
                each link in data.links
                    li(class="stepper_item" style=`--icon: url('${link.icon}')`)
                        div(class="stepper_content")         
                            a(href=link.link target="_blank" class="link_link")
                                h3(class="stepper_title") #{link.title}
